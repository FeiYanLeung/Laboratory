@section scripts{
    <script>
        $(function () {

            //复杂数据类型
            $.ajax({
                url: "/api/data/complex",
                type: "POST",
                dataType: "json",
                contentType: "application/json",
                data: JSON.stringify({
                    "Id": 1,
                    "DataItems": [{
                        "Id": 1,
                        "Name": "DI1",
                        "Properties": [{
                            "Name": "DI1->P1"
                        }]
                    }, {
                        "Id": 2,
                        "Name": "DI2",
                        "Properties": [{
                            "Name": "DI2->P2"
                        }]
                    }]
                }),
                success: function (res) {
                    console.log(res);
                }
            });

            //简易数据类型
            $.ajax({
                url: "/api/data/simple",
                type: "POST",
                dataType: "json",
                contentType: "application/json",
                data: "请求类型为application/json，内容为json字符串",//JSON.stringify("请求类型为application/json，内容为json字符串"),
                success: function (res) {
                    console.log(res);
                }
            });
        });

    </script>
}